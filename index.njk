---
layout: base-layout.njk
pagination:
  data: collections.post
  size: 10
  reverse: true
  alias: posts
---
{% for post in posts %}
  <article>
    <h1>
      <a href="{{ post.url | url }}">{{ post.data.title }}</a>
    </h1>

    <time datetime="{{ post.date | dateIso }}">{{ post.date | dateReadable }}</time>
    
    {% excerpt post %}

<a href="{{ post.url | url }}"
   aria-label="Les mer pÃ¥ {{ post.data.title }}">Les mer</a>
</article>
{% endfor %}